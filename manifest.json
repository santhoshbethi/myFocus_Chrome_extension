{
  "name": "FocusCoach AI (V1)",
  "description": "Goal-aligned summarizer using Chrome built-in AI.",
  "version": "0.1.0",
  "manifest_version": 3,
  "action": { "default_popup": "popup.html" },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["page-analyzer.js"],
      "matches": ["<all_urls>"]
    }
  ]
}